<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp"
    android:layout_marginBottom="30dp"
    style="@style/ScreenBackgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/set_language"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            style="@style/TextColor"
            android:id="@+id/txt"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/radioGroup"
            app:layout_constraintTop_toBottomOf="@id/txt"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="match_parent"
                android:backgroundTint="@color/red"
                android:text="O\'zbek"
                android:paddingStart="8dp"
                app:buttonTint="#FF5D5A"
                android:id="@+id/uzbekRadio"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />
            <RadioButton
                android:layout_width="match_parent"
                android:backgroundTint="@color/red"
                android:text="Ўзбек"
                android:paddingStart="8dp"
                app:buttonTint="#FF5D5A"
                android:id="@+id/uzbekKRadio"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />
            <RadioButton
                android:layout_width="match_parent"
                android:backgroundTint="@color/red"
                android:text="Русский"
                android:paddingStart="8dp"
                android:id="@+id/rusRadio"
                app:buttonTint="#FF5D5A"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />
            <RadioButton
                android:layout_width="match_parent"
                android:backgroundTint="@color/red"
                android:text="English"
                android:id="@+id/engRadio"
                app:buttonTint="#FF5D5A"
                android:paddingStart="@dimen/_8dp"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />
            <RadioButton
                android:layout_width="match_parent"
                android:backgroundTint="@color/red"
                android:text="Qoraqalpoq"
                android:id="@+id/kaaRadio"
                app:buttonTint="#FF5D5A"
                android:paddingStart="@dimen/_8dp"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />
            <RadioButton
                android:layout_width="match_parent"
                android:backgroundTint="@color/red"
                android:text="Қазақ"
                android:id="@+id/kazRadio"
                app:buttonTint="#FF5D5A"
                android:paddingStart="@dimen/_8dp"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />
            <RadioButton
                android:layout_width="match_parent"
                android:backgroundTint="@color/red"
                android:text="Кыргызча"
                android:id="@+id/kyRadio"
                app:buttonTint="#FF5D5A"
                android:paddingStart="@dimen/_8dp"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />
            <RadioButton
                android:layout_width="match_parent"
                android:backgroundTint="@color/red"
                android:text="Тоҷикӣ"
                android:id="@+id/tgRadio"
                app:buttonTint="#FF5D5A"
                android:paddingStart="@dimen/_8dp"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />

        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroup"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_backround"
            android:text="@string/save"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:id="@+id/saveBtn"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>