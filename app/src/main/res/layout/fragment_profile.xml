<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profileFragment"
    style="@style/ScreenBackgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:id="@+id/refreshLayout"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:paddingBottom="90dp"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/profileView"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    app:cardCornerRadius="180dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    android:id="@+id/imageContainer"
                    app:cardElevation="1dp"
                    android:layout_height="140dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/pearsonImage"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/imageContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:textSize="27sp"
                    android:id="@+id/pearsonNameTv"
                    tools:text="Kristen Rogers"
                    android:textStyle="bold"
                    style="@style/TextColor"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/pearsonNameTv"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="youremail@gmail.com"
                    android:textColor="#858D93"
                    android:id="@+id/pearsonEmailTv"
                    android:layout_height="wrap_content"/>


                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:background="@drawable/red_rectangle_12"
                    android:text="@string/fragment_profile_edit_profile"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    app:layout_constraintTop_toBottomOf="@id/pearsonEmailTv"
                    android:layout_marginTop="20dp"
                    android:id="@+id/editBtn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/editBtn"
                android:layout_marginTop="32dp"
                android:id="@+id/notificationContainer"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/ic_notification"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/notificationImg"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="20dp"/>

                <ImageView
                    android:layout_width="14dp"
                    android:src="@drawable/sharp_arrow_forward_ios_24"
                    app:layout_constraintTop_toTopOf="@id/notificationImg"
                    app:layout_constraintBottom_toBottomOf="@id/notificationImg"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_height="14dp"
                    app:tint="#777A7C" />

                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/notificationImg"
                    app:layout_constraintStart_toEndOf="@id/notificationImg"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:id="@+id/notificationTv"
                    android:fontFamily="@font/nunito_bold"
                    style="@style/TextColor"
                    android:text="@string/fragment_profile_notification"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="0dp"
                    app:layout_constraintStart_toStartOf="@id/notificationTv"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/notificationDivider"
                    app:layout_constraintTop_toBottomOf="@id/notificationTv"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   app:layout_constraintTop_toBottomOf="@id/notificationContainer"
                   android:layout_marginTop="16dp"
                   android:id="@+id/languageContainer"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="20dp"
                       android:src="@drawable/ic_globe"
                       android:id="@+id/languageImg"
                       app:layout_constraintTop_toTopOf="parent"
                       android:layout_marginStart="16dp"
                       app:layout_constraintStart_toStartOf="parent"
                       android:layout_height="20dp"/>

                   <ImageView
                       android:layout_width="14dp"
                       android:src="@drawable/sharp_arrow_forward_ios_24"
                       app:layout_constraintTop_toTopOf="@id/languageImg"
                       app:layout_constraintBottom_toBottomOf="@id/languageImg"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:layout_marginEnd="16dp"
                       android:layout_height="14dp"
                       app:tint="#777A7C" />

                   <TextView
                       android:layout_width="wrap_content"
                       app:layout_constraintTop_toTopOf="@id/languageImg"
                       app:layout_constraintStart_toEndOf="@id/languageImg"
                       android:layout_marginStart="16dp"
                       android:textSize="16sp"
                       android:id="@+id/languageTv"
                       android:fontFamily="@font/nunito_bold"
                       style="@style/TextColor"
                       android:text="@string/fragment_profile_language"
                       android:layout_height="wrap_content"/>

                   <com.google.android.material.divider.MaterialDivider
                       android:layout_width="0dp"
                       app:layout_constraintStart_toStartOf="@id/languageTv"
                       android:layout_marginTop="16dp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toBottomOf="@id/languageTv"
                       android:id="@+id/languageDivider"
                       android:layout_height="wrap_content"/>
               </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:id="@+id/nightModeContainer"
                    app:layout_constraintTop_toBottomOf="@id/languageContainer"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/ic_moon"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/darkModeImg"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="20dp"/>

                    <ImageView
                        android:layout_width="14dp"
                        android:src="@drawable/sharp_arrow_forward_ios_24"
                        app:layout_constraintTop_toTopOf="@id/darkModeImg"
                        app:layout_constraintBottom_toBottomOf="@id/darkModeImg"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:layout_height="14dp"
                        app:tint="#777A7C" />

                    <TextView
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/darkModeImg"
                        app:layout_constraintStart_toEndOf="@id/darkModeImg"
                        android:layout_marginStart="16dp"
                        android:textSize="16sp"
                        android:id="@+id/darkModeTv"
                        android:fontFamily="@font/nunito_bold"
                        style="@style/TextColor"
                        android:text="@string/fragment_profile_dark_mode"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="0dp"
                        app:layout_constraintStart_toStartOf="@id/darkModeTv"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/darkModeTv"
                        android:id="@+id/darkModeDivider"
                        android:layout_height="wrap_content"/>



                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:id="@+id/contactContainer"
                    app:layout_constraintTop_toBottomOf="@id/nightModeContainer"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/ic_chat"
                        android:id="@+id/chatImg"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="20dp"/>

                    <ImageView
                        android:layout_width="14dp"
                        android:src="@drawable/sharp_arrow_forward_ios_24"
                        app:layout_constraintTop_toTopOf="@id/chatImg"
                        app:layout_constraintBottom_toBottomOf="@id/chatImg"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:layout_height="14dp"
                        app:tint="#777A7C" />

                    <TextView
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/chatImg"
                        app:layout_constraintStart_toEndOf="@id/chatImg"
                        android:layout_marginStart="16dp"
                        android:textSize="16sp"
                        android:id="@+id/chatTv"
                        android:fontFamily="@font/nunito_bold"
                        style="@style/TextColor"
                        android:text="@string/fragment_profile_help_center"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/contactContainer"
                    android:layout_marginTop="24dp"
                    android:id="@+id/logOut"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="24sp"
                    android:textColor="#FF5D5A"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="32dp"
                    android:text="@string/fragment_profile_log_out"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        layout="@layout/view_loading"
        android:id="@+id/loading"
        />

    <include layout="@layout/view_error"
        android:id="@+id/error"/>



</androidx.constraintlayout.widget.ConstraintLayout>