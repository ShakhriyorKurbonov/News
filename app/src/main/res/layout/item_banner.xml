<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image"
            android:scaleType="fitXY"
            tools:src="@drawable/banner_test"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_rectangle_8"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="10sp"
                android:id="@+id/authorTv"
                android:fontFamily="@font/nunito_variablefont_wght"
                tools:text="by Ryan Browne"
                android:layout_marginStart="16dp"
                android:layout_marginTop="80dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/authorTv"
                app:layout_constraintStart_toStartOf="@id/authorTv"
                android:textSize="16sp"
                android:id="@+id/titleTv"
                tools:text="Crypto investors should be prepared to lose all their money, BOE governor says"
                android:textColor="@color/white"
                android:fontFamily="@font/new_york_small_semibold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/nunito_variablefont_wght"
                tools:text="“I’m going to say this very bluntly again,” he added. “Buy them only if you’re prepared to lose all your money.”"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:id="@+id/descriptionTv"
                android:layout_margin="16dp"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>