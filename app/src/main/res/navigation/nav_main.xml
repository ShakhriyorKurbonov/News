<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.k.shakhriyor.news.presentation.main_activity.home.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="HomeFragment" >

        <action
            android:id="@+id/to_searchFragment"
            app:destination="@id/searchFragment"/>

        <action
            android:id="@+id/to_newsListFragment"
            app:destination="@id/newsListFragment"
            >


        </action>

        <action
            android:id="@+id/to_newsItemFragment"
            app:destination="@id/newsItemFragment"/>


    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.k.shakhriyor.news.presentation.main_activity.search.SearchFragment"
        tools:layout="@layout/fragment_search"
        android:label="SearchFragment">
        <action android:id="@+id/to_newsItemFragment"
            app:destination="@id/newsItemFragment"/>
    </fragment>

    <fragment
        android:id="@+id/newsListFragment"
        android:name="com.k.shakhriyor.news.presentation.main_activity.news_list.NewsListFragment"
        tools:layout="@layout/fragment_news_list"
        android:label="FragmentNewsList"
        >

    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.k.shakhriyor.news.presentation.main_activity.favorite.FavoriteFragment"
        tools:layout="@layout/fragment_favorite"
        android:label="FavoriteFragment"
        >

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.k.shakhriyor.news.presentation.main_activity.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile"
        android:label="ProfileFragment"
        >

    </fragment>

    <fragment android:id="@+id/newsItemFragment"
        android:name="com.k.shakhriyor.news.presentation.main_activity.news_item.NewsItemFragment"
        tools:layout="@layout/fragment_news_item"
        android:label="NewsItemFragment"
        >


    </fragment>
</navigation>